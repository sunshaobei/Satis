<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="OSLStyle" format="reference"/><!--样式-->

    <attr name="oslDrawableSize" format="dimension"/><!--图片尺寸-->
    <attr name="oslDrawableArrowSize" format="dimension"/><!--箭头图片尺寸-->
    <attr name="oslDrawableProgressSize" format="dimension"/><!--箭头图片尺寸-->
    <attr name="oslDrawableMarginRight" format="dimension"/><!--图片和文字的间距-->
    <attr name="oslTextSizeTitle" format="dimension"/><!--标题字体-->
    <attr name="oslTextSizeTime" format="dimension"/><!--时间字体-->
    <attr name="oslFinishDuration" format="integer"/><!--完成时停留时间-->
    <attr name="oslPrimaryColor" format="color"/><!--主要颜色-->
    <attr name="oslAccentColor" format="color"/><!--强调颜色-->
    <attr name="oslDrawableArrow" format="reference"/><!--箭头图片-->
    <attr name="oslDrawableProgress" format="reference"/><!--转动图片-->
    <attr name="oslEnableHorizontalDrag" format="boolean"/><!--支持水平拖动-->

    <attr name="oslTextPulling" format="string"/>
    <attr name="oslTextLoading" format="string"/>
    <attr name="oslTextRelease" format="string"/>
    <attr name="oslTextFinish" format="string"/>
    <attr name="oslTextFailed" format="string"/>
    <attr name="oslTextUpdate" format="string"/>
    <attr name="oslTextSecondary" format="string"/>
    <attr name="oslTextRefreshing" format="string"/>
    <attr name="oslTextNothing" format="string" />

    <attr name="oslClassicsSpinnerStyle" format="enum">
        <enum name="Translate" value="0"/><!--平行移动-->
        <enum name="Scale" value="1"/><!--拉伸形变-->
        <enum name="FixedBehind" value="2"/><!--固定在背后-->
    </attr>

    <attr name="layout_oslSpinnerStyle" format="enum">
        <enum name="Translate" value="0"/><!--平行移动-->
        <enum name="Scale" value="1"/><!--拉伸形变-->
        <enum name="FixedBehind" value="2"/><!--固定在背后-->
        <enum name="FixedFront" value="3"/><!--固定在前面-->
        <enum name="MatchLayout" value="4"/><!--填满布局-->
    </attr>

    <declare-styleable name="OverScrollLayout">
        <attr name="android:clipChildren"/>
        <attr name="android:clipToPadding"/>
        <attr name="oslPrimaryColor"/>
        <attr name="oslAccentColor"/>
        <attr name="oslReboundDuration" format="integer"/>
        <attr name="oslHeaderHeight" format="dimension"/>
        <attr name="oslFooterHeight" format="dimension"/>
        <attr name="oslHeaderInsetStart" format="dimension"/>
        <attr name="oslFooterInsetStart" format="dimension"/>
        <attr name="oslDragRate" format="float"/>
        <attr name="oslHeaderMaxDragRate" format="float"/>
        <attr name="oslFooterMaxDragRate" format="float"/>
        <attr name="oslHeaderTriggerRate" format="float"/>
        <attr name="oslFooterTriggerRate" format="float"/>
        <attr name="oslEnableRefresh" format="boolean"/>
        <attr name="oslEnableLoadMore" format="boolean"/>
        <attr name="oslEnableHeaderTranslationContent" format="boolean"/>
        <attr name="oslEnableFooterTranslationContent" format="boolean"/>
        <attr name="oslHeaderTranslationViewId" format="reference"/>
        <attr name="oslFooterTranslationViewId" format="reference"/>
        <attr name="oslEnablePreviewInEditMode" format="boolean"/>
        <attr name="oslEnableAutoLoadMore" format="boolean"/>
        <attr name="oslEnableOverScrollBounce" format="boolean"/>
        <attr name="oslEnablePureScrollMode" format="boolean"/>
        <attr name="oslEnableNestedScrolling" format="boolean"/>
        <attr name="oslEnableScrollContentWhenLoaded" format="boolean"/>
        <attr name="oslEnableScrollContentWhenRefreshed" format="boolean"/>
        <attr name="oslEnableLoadMoreWhenContentNotFull" format="boolean"/>
        <attr name="oslEnableFooterFollowWhenLoadFinished" format="boolean"/>
        <attr name="oslEnableFooterFollowWhenNoMoreData" format="boolean"/>
        <attr name="oslEnableClipHeaderWhenFixedBehind" format="boolean"/>
        <attr name="oslEnableClipFooterWhenFixedBehind" format="boolean"/>
        <attr name="oslEnableOverScrollDrag" format="boolean"/>
        <attr name="oslDisableContentWhenRefresh" format="boolean"/>
        <attr name="oslDisableContentWhenLoading" format="boolean"/>
        <attr name="oslFixedHeaderViewId" format="reference"/>
        <attr name="oslFixedFooterViewId" format="reference"/>
    </declare-styleable>

    <declare-styleable name="OverScrollLayout_Layout">
        <attr name="layout_oslSpinnerStyle"/>
        <attr name="layout_oslBackgroundColor" format="color"/>
    </declare-styleable>

    <style name="OverScrollStyle">
        <item name="oslPrimaryColor">@android:color/holo_blue_dark</item>
        <item name="oslAccentColor">@android:color/white</item>
        <item name="oslReboundDuration">300</item>
        <item name="oslHeaderHeight">100dp</item>
        <item name="oslFooterHeight">60dp</item>
        <item name="oslHeaderInsetStart">0dp</item>
        <item name="oslFooterInsetStart">0dp</item>
        <item name="oslDragRate">0.5</item>
        <item name="oslHeaderMaxDragRate">2.5</item>
        <item name="oslFooterMaxDragRate">2.5</item>
        <item name="oslHeaderTriggerRate">1</item>
        <item name="oslFooterTriggerRate">1</item>
        <!--<item name="oslEnableRefresh">true</item>-->
        <!--<item name="oslEnableLoadMore">true</item>-->
        <!--<item name="oslEnableHeaderTranslationContent">true</item>-->
        <!--<item name="oslEnableFooterTranslationContent">true</item>-->
        <!--<item name="oslHeaderTranslationViewId">-1</item>-->
        <!--<item name="oslFooterTranslationViewId">-1</item>-->
        <item name="oslEnablePreviewInEditMode">true</item>
        <item name="oslEnableAutoLoadMore">true</item>
        <item name="oslEnableOverScrollDrag">false</item>
        <item name="oslEnableOverScrollBounce">true</item>
        <item name="oslEnablePureScrollMode">false</item>
        <item name="oslEnableNestedScrolling">true</item>
        <item name="oslEnableScrollContentWhenLoaded">true</item>
        <item name="oslEnableScrollContentWhenRefreshed">true</item>
        <item name="oslEnableLoadMoreWhenContentNotFull">true</item>
        <!--<item name="oslEnableFooterFollowWhenLoadFinished" format="boolean"/>-->
        <item name="oslEnableFooterFollowWhenNoMoreData">false</item>
        <item name="oslEnableClipHeaderWhenFixedBehind">true</item>
        <item name="oslEnableClipFooterWhenFixedBehind">true</item>
        <item name="oslDisableContentWhenRefresh">false</item>
        <item name="oslDisableContentWhenLoading">false</item>
        <!--<item name="oslFixedHeaderViewId" format="reference"/>-->
        <!--<item name="oslFixedFooterViewId" format="reference"/>-->
    </style>

</resources>